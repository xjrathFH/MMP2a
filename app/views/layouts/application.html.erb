    <header class="card" id="header-desktop">
      <%= link_to root_path, class: 'logo' do %>
        <%= image_tag('fhodds_logo.svg', alt: 'Fhodds Logo', class: 'logo') %>
      <% end %>

      <% if current_user %>
        <nav>
          <ul>
            <%=
              link_to 'My Bets', bets_user_path(current_user), class: 'card'
            %>
            <%= link_to 'Public bets', bets_path, class: 'card' %>
          </ul>
        </nav>
      <% end %>

      <% if current_user %>
        <% if !current_user.username %>
          <%= render 'shared/update_username_form' %>
        <% end %>
        <ul id="header-button-group">
          <li>
            <%= link_to(new_bet_path, class: 'button-container') do %>
              <svg
                viewBox="0 0 51 43"
                fill="currentColor"
                xmlns="http://www.w3.org/2000/svg"
              >
