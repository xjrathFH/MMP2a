                  d="M17.1838 42.5V25.7H0.383789V17.3H17.1838V0.5H33.9838V17.3H50.7838V25.7H33.9838V42.5H17.1838Z"
                />
              </svg>
            <% end %>
          </li>
          <li>
            <%= link_to notifications_path, class: 'button-container' do %>
              <svg
                viewBox="0 0 32 35"
                fill="currentColor"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
