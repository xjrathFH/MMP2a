<main>
  <div id="my-bets" class="card main-card-container">
    <h3>Running Bets</h3>
    <div id="my-bets-card-wrapper" class="card-wrapper">
      <% if @bets.where(resolved: false).any? %>
        <% @bets.where(resolved: false).each do |bet| %>
          <div class="card">
            <h4 class="title"><%= bet.title %></h4>
            <p>
              Created by:&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
              <strong><%= User.find_by(id: bet.owner_id).username %></strong>
            </p>
            <p class="minimum-bet">
              Minimum bet:&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
              <strong><%= bet.minimum_fee %><span class="currency">
                  ECT$</span
                ></strong
              >
            </p>
            <%=
              link_to 'Show !',
                      new_participation_path(bet_id: bet.id),
                      class: 'card button'
            %>
          </div>
        <% end %>
      <% else %>
        <div id="my-bets-card-wrapper" class="card-wrapper empty">
          <p>There are currently no running bets</p>
          <%= link_to 'Make a new bet', new_bet_path, class: 'card' %>
        </div>
      <% end %>
    </div>
    <h3>Resolved Bets</h3>
    <div id="my-bets-card-wrapper" class="card-wrapper">
      <% if  @bets.where(resolved: true).any? %>
        <% @bets.where(resolved: true).each do |bet| %>
          <div class="card">
            <h4 class="title"><%= bet.title %></h4>
            <p>
              Created by:&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
              <strong><%= User.find_by(id: bet.owner_id).username %></strong>
            </p>
            <p class="minimum-bet">
              Minimum bet:&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
              <strong><%= bet.minimum_fee %><span class="currency">
                  ECT$</span
                ></strong
              >
            </p>
            <%= link_to 'Show!', bet, class: 'card button' %>
          </div>
        <% end %>
      <% else %>
        <div id="my-bets-card-wrapper" class="card-wrapper empty">
          <p>There are currently no resolved bets</p>
          <%= link_to 'Make a new bet', new_bet_path, class: 'card' %>
        </div>
      <% end %>
    </div>
  </div>
</main>
